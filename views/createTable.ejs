<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear tabla</title>
  </head>
  <body>
    <%- include('navbar'); %>
    <h3>Nombre</h3>
    <div class="input-group" style="margin-top: 25px;">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">Nombre de la tabla</span>
      </div>
      <input type="text" class="form-control" id="name" />
    </div>
    <h3>Campos</h3>

    <table class="table table-dark" id="table">
      <thead>
        <tr>
          <th scope="col" class="text-center">Nombre de campo</th>
          <th scope="col" class="text-center">Tipo de dato</th>
          <th scope="col" class="text-center">opciones de campo</th>
          <th scope="col" class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <h3>Agregar campos</h3>

    <div class="container">
      <form>
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label"
            >Nombre de campo</label
          >
          <div class="col-sm-10">
            <input type="text" class="form-control" id="nombreCampo" />
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword3" class="col-sm-2 col-form-label"
            >Tipo de dato</label
          >
          <div class="col-sm-10">
            <select class="form-control" id="datatypeCampo">
              <option>INTEGER</option>
              <option>DECIMAL</option>
              <option>CHAR(250)</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2">Checkbox</div>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="primarykey" />
              <label class="form-check-label" for="gridCheck1">
                Primary key
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="notnull" />
              <label class="form-check-label" for="gridCheck1">
                Not null
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="unique" />
              <label class="form-check-label" for="gridCheck1">
                unique
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" id="createBtn" class="btn btn-primary">
              Agregar campo
            </button>
          </div>
        </div>
      </form>
    </div>

    <button class="btn btn-success w-100" id="createTable">Crear tabla</button>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
    <script src="/js/createTable.js"></script>
  </body>
</html>
