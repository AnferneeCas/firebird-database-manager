<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Triggers</title>
  </head>
  <body>
    <%- include('navbar'); %>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">Crear tabla</h1>
      </div>
    </div>

    <div class="container">
      <form>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Nombre</label>
          <input type="text" class="form-control" id="trigger_name"  />
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Table</label>
          <select class="form-control" id="trigger_table" >

            <%for( var i = 0 ; i<data.length ; i++){ %>


              <option><%= data[i].RDB$RELATION_NAME%></option>
              <%}%>

          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect2">Tipo</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="exampleRadios"
              id="optionAfter"
              value="AFTER"
              checked
            />
            <label class="form-check-label" for="exampleRadios1">
              AFTER
            </label>
          </div>
          <div class="form-check">
            <input
              name="exampleRadios"
              class="form-check-input"
              id="optionBefore"
              type="radio"
              value="BEFORE"
            />
            <label class="form-check-label" for="exampleRadios2">
              BEFORE
            </label>
          </div>
        </div>
        <div class="form-group">
          <label class="form-check-label">
            Evento
          </label>
          <div class="form-check form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="insert"
              value="INSERT"
            />
            <label class="form-check-label" for="inlineCheckbox1">Insert</label>
          </div>
          <div class="form-check form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="update"
              value="UPDATE"
            />
            <label class="form-check-label" for="inlineCheckbox2">Update</label>
          </div>
          <div class="form-check form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="delete"
              value="DELETE"
            />
            <label class="form-check-label" for="inlineCheckbox3">Delete</label>
          </div>
        </div>

        <div class="form-group">
          <label for="exampleFormControlTextarea1">Codigo</label>
          <textarea class="form-control" id="code" rows="5">
BEGIN    END </textarea
          >
        </div>
      </form>
      <button class="btn btn-info w-100" id="btn">Crear trigger</button>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
    <script src="/js/createTrigger.js"></script>
  </body>
</html>
